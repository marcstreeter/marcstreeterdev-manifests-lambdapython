# Default values for {{ project_name }}
# This is a YAML-formatted file.

# Project configuration
project_name: "{{ project_kebab }}"
environment: "development"

# API Gateway configuration
apiGatewayUrl: "https://your-api-gateway.amazonaws.com/prod"

# General Lambda
lambda:
  env: []
  # Add environment variables as needed
  # env:
  #   - name: DEBUG
  #     value: "true"
  selectorLabels:
    app: "{{ project_kebab }}"
    service: "{{ project_kebab }}-lambda"
  name: "{{ project_kebab }}-lambda"
  image:
    name: "{{ project_kebab }}-lambda"
    tag: "latest"
    pullPolicy: "IfNotPresent"
  replicas: 1
  resources:
    limits:
      cpu: "500m"
      memory: "512Mi"
    requests:
      cpu: "250m"
      memory: "256Mi"
  serviceType: "ClusterIP"
  port: {{ lambda_port }}
  portName: {{ lambda_port_name }}
  protocol: "TCP"
  debug:
    enabled: false
    port: {{ lambda_port_debug }}
    portName: {{ lambda_port_debug_name }}
    protocol: "TCP"

interface:
  env: []
  # Add environment variables as needed
  # env:
  #   - name: DEBUG
  #     value: "true"
  name: "{{ project_kebab }}-interface"
  image:
    name: "{{ project_kebab }}-interface"
    tag: "latest"
    pullPolicy: "IfNotPresent"
  replicas: 1
  resources:
    limits:
      cpu: "500m"
      memory: "512Mi"
    requests:
      cpu: "250m"
      memory: "256Mi"
  selectorLabels:
    app: "{{ project_kebab }}"
    service: "{{ project_kebab }}-interface"
  port: {{ interface_port }}
  portName: {{ interface_port_name }}
  protocol: "TCP"
